<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:stretchColumns="1">

    <TextView
        android:id="@+id/conf_changed_warning"
        android:layout_column="0"
        android:gravity="left"
        android:text="@string/restart_prompt"
        android:textColor="@color/red"
        android:padding="3dip" />
    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/LENGTH_UNIT"
            android:layout_column="0"
            android:gravity="left"
            android:text="Length unit"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/LENGTH_UNIT_VALUE"
            android:layout_column="1"
            android:gravity="right"
            android:background="@color/green"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/MAP_TYPE"
            android:gravity="left"
            android:layout_column="0"
            android:text="Map provider"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/MAP_TYPE_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/SPEED_TYPE"
            android:gravity="left"
            android:layout_column="0"
            android:text="Speed type"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/SPEED_TYPE_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/MIN_DISTANCE"
            android:layout_column="0"
            android:gravity="left"
            android:text="Min distance"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/MIN_DISTANCE_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/INTERVAL_LOCATION"
            android:layout_column="0"
            android:gravity="left"
            android:text="Min Gps interval"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/INTERVAL_LOCATION_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/LOCATION_ACCURACY"
            android:layout_column="0"
            android:gravity="left"
            android:text="Min Gps accuracy"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/LOCATION_ACCURACY_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/SPEED_AVG"
            android:layout_column="0"
            android:gravity="left"
            android:text="Average speed window"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/SPEED_AVG_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/GPS_ONLY"
            android:layout_column="0"
            android:gravity="left"
            android:text="Used GPS only"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/GPS_ONLY_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/ACCELERATE_FACTOR"
            android:layout_column="0"
            android:gravity="left"
            android:text="Acceleration factor"
            android:padding="3dip" />
        <Spinner
            android:id="@+id/ACCELERATE_FACTOR_VALUE"
            android:layout_column="1"
            android:background="@color/green"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </TableRow>
    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

</TableLayout>